
carbon = url(/images/carbon_fibre.png) #333
//aluminum = url(/images/brushed_alu_dark.png) #888
aluminum = #888

body, html
  padding 0px
  margin 0px
  background carbon
  font-family "Helvetica"

.version
  position absolute
  bottom 0px
  left 0px
  color white
  font-weight bold


#game
  margin 0px
  padding 0px

  .side
    width 130px
    margin 10px
    position absolute
    left 0px
    top 0px

  .logo
    position relative
    background aluminum
    margin-bottom 10px
    padding 4px
    color white
    font-weight bold

  .content
    margin-left 10px
    position absolute
    left 130px

  .alerts
    margin 10px
    background-color #FFF
    padding-top 5px
    padding-bottom 5px
    .label
      background aluminum
      padding 5px
      color white
    .alert
      display inline-block

  #board
    margin 10px
    background url(/images/bg3.png) repeat
    box-shadow(inset 0px 0px 50px 0px rgba(0, 0, 0, 0.8))
    width 800px
    height 600px
    position relative
    outline none // removes the selected highlight

    .winner
      position absolute
      display block
      border solid 3px #333
      background-color white
      padding 20px
      right 10px
      bottom -10px

    .taunt
      position absolute
      left 50px
      top -20px
      min-width 150px

    .player
      -webkit-transition-property top, left
      transition-property top, left
      -ms-transition-property top, left
      -o-transition-property top, left
      transition-duration(500ms)
      position absolute
      width 50px
      height 50px

    .missile
      position absolute
      width 50px
      height 50px
      background url(/images/rocket.png) no-repeat 0px 0px
      transition(all 100ms linear)

    .missile.down
      transform rotate(270deg)

    .missile.right
      transform rotate(180deg)

    .missile.up
      transform rotate(90deg)

.scores
  background-color #555


.leaderboard
  width 130px

.playerCard
  position relative
  background aluminum

  padding 10px
  margin-bottom 10px
  .name
    background-color white
    padding 5px
  .avatarbg
    border solid 2px black
    float left
    background-color white
    margin-top 5px
    height 60px
  .avatar
    margin-top 5px
    width 50px
    height 50px
  .score
    margin-top 5px
    margin-left 60px
    position relative
    width 50px
    height 65px
    background-color white
    .label
      background-color #333
      padding 5px
      color white
      font-size 12px
    .num
      text-align center
      font-size 30px
      font-weight bold
  &.dead 
    .status
      background-color rgba(0, 0, 0, 0.5)
      position absolute
      top 0px
      left 0px
      height 118px

    .skull
      background url(/images/dead.png) no-repeat center bottom
      opacity 0.6
      width 130px
      height 89px
      margin-top 16px


