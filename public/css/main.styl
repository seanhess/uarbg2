body, html
  padding 0px
  margin 0px
  background-color #333
  font-family "Helvetica"


.version
  position absolute
  bottom 0px
  left 0px
  color white
  font-weight bold


#game
  margin 0px
  padding 0px

  .side
    width 130px
    margin 10px
    position absolute
    left 0px
    top 0px

  .logo
    position relative
    background-color #888
    margin-bottom 10px

  .content
    margin-left 10px
    position absolute
    left 130px

  .alerts
    margin 10px
    background-color #FFF
    padding-top 5px
    padding-bottom 5px
    .label
      background-color #888
      padding 5px
    .alert
      display inline-block

  #board
    margin 10px
    background url(/images/bg3.png) repeat
    width 800px
    height 600px
    position relative
    outline none // removes the selected highlight

    .winner
      position absolute
      display block
      border solid 3px #333
      background-color white
      padding 20px
      right 10px
      bottom -10px

    .taunt
      position absolute
      left 50px
      top -20px
      min-width 150px

    .player
      -webkit-transition-property top, left
      transition-property top, left
      -ms-transition-property top, left
      -o-transition-property top, left
      transition-duration(500ms)
      background url(/images/player1.png) no-repeat -150px -150px
      position absolute
      width 50px
      height 50px

    .player2
      background url(/images/player2.png) no-repeat -150px -150px

    .player3
      background url(/images/player3.png) no-repeat -150px -150px

    .player4
      background url(/images/player4.png) no-repeat -150px -150px

    .player5
      background url(/images/player5.png) no-repeat -150px -150px

    .player6
      background url(/images/player6.png) no-repeat -150px -150px
    
    .player.dead
      background: url("/images/explode.gif") no-repeat 0px 0px

    .missile
      position absolute
      width 50px
      height 50px
      background url(/images/rocket.png) no-repeat 0px 0px
      transition(all 100ms linear)

    .missile.down
      transform rotate(270deg)

    .missile.right
      transform rotate(180deg)

    .missile.up
      transform rotate(90deg)

.scores
  background-color #555

.playerCard
  position relative
  background-color #888
  padding 10px
  margin-bottom 10px
  .name
    background-color white
    padding 5px
  .avatarbg
    border solid 2px black
    float left
    background-color white
    margin-top 5px
    height 60px
  .avatar
    width 50px
    height 50px
  .score
    margin-top 5px
    margin-left 60px
    position relative
    width 50px
    height 65px
    background-color white
    .label
      background-color #333
      padding 5px
      color white
      font-size 12px
    .num
      text-align center
      font-size 30px
      font-weight bold

.avatar.player1
  background url(/images/player1.png) no-repeat center bottom

.avatar.player2
  background url(/images/player2.png) no-repeat center bottom

.avatar.player3
  background url(/images/player3.png) no-repeat center bottom

.avatar.player4
  background url(/images/player4.png) no-repeat center bottom

.avatar.player5
  background url(/images/player5.png) no-repeat center bottom

.avatar.player6
  background url(/images/player6.png) no-repeat center bottom

#identify
  background url(/images/bg3.png)
  border solid 5px #333
  min-height 600px
  
  .upgrade-link
    float left
    padding-top 50px
    clear both


  .avatar
    float left
    width 50px
    height 50px
    margin 3px

  .menu
    transition(all 500ms linear)
    opacity 0

    margin-left 10px

    &.show
      opacity 1

    .error
      font-size 18px
      color #F33
      font-weight bold


    .avatars
      .avatar
        &:hover, &.selected
          border solid 3px #FAA
          margin 0

    .name
      clear both
      input
        -webkit-border-radius 10px
        -moz-border-radius 10px
        border-radius 10px
        padding-left 5px
        padding-right 5px

    .players
      .player
        clear both


    .gameId
      position absolute
      right 0
      bottom 0

  .title
    display block
    margin 0px auto
    position absolute
    top -400px
    right 150px
    transition(all 1200ms linear)
    &.intro, &.show
      top 100px


#intro
  background url(/images/bg3.png)
  border solid 5px #333
  height 600px


////////////// For taunts /////////////
.triangle-border 
  position absolute
  padding 15px
  margin 1em 0 3em
  border 5px solid #335
  color #333 
  background #fff
  -webkit-border-radius 10px
  -moz-border-radius 10px
  border-radius 10px

.triangle-border.left 
  margin-left 30px

.triangle-border:before 
  content ""
  position absolute
  bottom -20px /* value = - border-top-width - border-bottom-width */
  left 40px  /* controls horizontal position */
  border-width 20px 20px 0
  border-style solid
  border-color #335 transparent
  /* reduce the damage in FF3.0 */
  display block  
  width 0 

/* creates the smaller  triangle */
.triangle-border:after 
  content ""
  position absolute
  bottom -13px /* value = - border-top-width - border-bottom-width */
  left 47px  /* value = (:before left) + (:before border-left) - (:after border-left) */
  border-width 13px 13px 0
  border-style solid
  border-color #fff transparent
  /* reduce the damage in FF3.0 */
  display block 
  width 0

/* creates the larger triangle */
.triangle-border.left:before 
  top 10px  /* controls vertical position */
  bottom auto 
  left -30px /* value = - border-left-width - border-right-width */
  border-width 15px 30px 15px 0
  border-color transparent #335


/* creates the smaller  triangle */
.triangle-border.left:after 
  top 16px /* value = (:before top) + (:before border-top) - (:after border-top) */
  bottom auto
  left -21px /* value = - border-left-width - border-right-width */
  border-width 9px 21px 9px 0
  border-color transparent #fff
